<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_product_details_image_row_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_category_item_image"
                android:layout_width="@dimen/CategoryDetailsListImageWidth"
                android:layout_height="@dimen/CategoryDetailsListImageHeight"
                android:layout_alignParentTop="true"
                android:layout_margin="3dp"
                fresco:placeholderImage="@drawable/ic_placeholder" />

            <votive.com.appuaet10.CustomUI.CustomRegularTextView
                android:id="@+id/tv_similar_item_row"
                android:layout_width="@dimen/CategoryDetailsListImageWidth"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_category_item_image"
                android:layout_margin="5dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:shadowColor="@color/colorBlack"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="@string/DemoText"
                android:textColor="@color/colorBlack" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>