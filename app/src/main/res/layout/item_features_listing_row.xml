<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_blog_row_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        card_view:cardElevation="5dp"
        card_view:contentPadding="0dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_feature_listing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_category_row_height"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/ic_placeholder" />

            <votive.com.appuaet10.CustomUI.CustomRegularTextView
                android:id="@+id/tv_feature_listing_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_feature_listing"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:background="@drawable/gradient_color"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:shadowColor="@color/colorBlack"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="@string/DemoText"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>