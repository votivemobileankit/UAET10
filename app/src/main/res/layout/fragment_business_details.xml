<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="votive.com.appuaet10.Activities.BusinessDetailsFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_category_display"
                android:layout_width="match_parent"
                android:layout_height="@dimen/businessDetailedbySearchImgHeight"
                android:background="@color/colorWhite"
                fresco:placeholderImage="@drawable/ic_placeholder"
                fresco:viewAspectRatio="1.77" />


            <votive.com.appuaet10.CustomUI.CustomRegularTextView
                android:id="@+id/tv_business_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:gravity="end"
                android:ellipsize="end"
                android:maxLines="1"
android:background="@color/colorHalfTransparent"
                android:padding="3dp"
                android:text="@string/DemoText"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ViewDividerColor" />

            <LinearLayout
                android:id="@+id/rl_product_details_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="3dp">

                    <LinearLayout
                        android:id="@+id/ll_category_info_inner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6">

                                    <votive.com.appuaet10.CustomUI.CustomBoldTextView
                                        android:id="@+id/tv_category_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="textMultiLine"
                                        android:maxLines="3"
                                        android:padding="3dp"
                                        android:text="@string/DemoText"
                                        android:textAllCaps="true"
                                        android:ellipsize="end"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_business_views"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="4"
                                    android:orientation="horizontal"
                                    android:gravity="right">

                                    <ImageView
                                        android:id="@+id/img_like"
                                        android:layout_width="@dimen/LikeImgWidth"
                                        android:layout_height="@dimen/LikeImgHeight"

                                        android:background="@drawable/ic_like_icon" />

                                    <votive.com.appuaet10.CustomUI.CustomRegularTextView
                                        android:id="@+id/tv_like_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:ellipsize="end"
                                        android:focusable="false"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:maxLines="1"
                                        android:text="10"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        tools:ignore="RtlHardcoded" />

                                </LinearLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <votive.com.appuaet10.CustomUI.CustomRegularTextView
                                    android:id="@+id/tv_category_detailed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:focusable="false"
                                    android:gravity="left|center"
                                    android:maxLines="5"
                                    android:padding="3dp"
                                    android:text="@string/DemoText"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12sp"
                                    tools:ignore="RtlHardcoded" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:orientation="horizontal"
                                    android:id="@+id/ll_business_details_fade"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/fade_text" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img_calling"
                                android:layout_width="@dimen/DetailedShareImgHeight"
                                android:layout_height="@dimen/DetailedShareImgWidth"
                                android:visibility="gone"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/ic_calling" />

                            <ImageView
                                android:id="@+id/img_weblink"
                                android:layout_width="@dimen/DetailedShareImgHeight"
                                android:visibility="gone"
                                android:layout_height="@dimen/DetailedShareImgWidth"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/ic_link" />

                            <ImageView
                                android:id="@+id/img_send_email"
                                android:layout_width="@dimen/DetailedShareImgHeight"
                                android:layout_height="@dimen/DetailedShareImgWidth"
                                android:visibility="gone"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/ic_email" />

                            <ImageView
                                android:id="@+id/img_fb"
                                android:layout_width="@dimen/DetailedShareImgHeight"
                                android:layout_height="@dimen/DetailedShareImgWidth"
                                android:visibility="gone"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_facebook" />

                            <ImageView
                                android:id="@+id/img_instagram"
                                android:layout_width="@dimen/DetailedShareImgHeight"
                                android:layout_height="@dimen/DetailedShareImgWidth"
                                android:visibility="gone"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_insta" />

                            <ImageView
                                android:id="@+id/img_linkdin"
                                android:layout_width="@dimen/DetailedShareImgHeight"
                                android:layout_height="@dimen/DetailedShareImgWidth"
                                android:visibility="gone"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_linkdin" />

                            <ImageView
                                android:id="@+id/img_twitter"
                                android:layout_width="@dimen/DetailedShareImgHeight"
                                android:visibility="gone"
                                android:layout_marginRight="5dp"
                                android:layout_height="@dimen/DetailedShareImgWidth"
                                android:src="@drawable/ic_twitter" />

                            <ImageView
                                android:id="@+id/img_share_link"
                                android:layout_width="@dimen/DetailedShareImgHeight"
                                android:layout_height="@dimen/DetailedShareImgWidth"

                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_share_icon" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_similar_product_Img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_marginTop="3dp"
                android:id="@+id/view_home"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ViewDividerColor"
                android:orientation="horizontal"
                android:visibility="visible" />

            <include layout="@layout/bottom_menu_layout"
                android:id="@+id/ll_home_bottom_menu"
                android:layout_height="@dimen/BottomMenuCellHeight"
                android:layout_width="match_parent"
                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
