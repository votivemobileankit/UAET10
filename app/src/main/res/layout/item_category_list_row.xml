<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/CategoryGridItemBg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_category_grid_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_category_grit_item"
            android:layout_width="@dimen/CategoryFragmentItemImgHeight"
            android:layout_height="@dimen/CategoryFragmentItemImgHeight"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/ic_placeholder" />

        <votive.com.appuaet10.CustomUI.CustomRegularTextView
            android:id="@+id/tv_category_grit_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sdv_category_grit_item"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="@string/DemoText"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/CategoryGridItemNormal"
            android:textSize="@dimen/sizeCatgeoryText" />
    </RelativeLayout>

</RelativeLayout>